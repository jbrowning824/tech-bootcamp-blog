<section>
    <h1>The Tech Blog</h1>
    {{#each posts as |post|}}
        <article>
            <h2>{{post.title}}</h2>
            <p>{{post.content}}</p>
            <p>Posted by {{post.user.username}} on {{post.createdAt}}</p>
        </article>
    {{else}}
        <p>No posts to display.</p>
    {{/each}}
    {{#if loggedIn }}
    <button class="new-post-btn">+ New Post</button>
    {{/if}}
</section>
